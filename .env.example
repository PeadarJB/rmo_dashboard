# ============================================
# RMO Dashboard Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# AWS Cognito Authentication Configuration
# --------------------------------------------
# The AWS region where your Cognito User Pool is located
VITE_AWS_REGION=eu-north-1

# Cognito User Pool ID - manages user accounts
# Format: <region>_<alphanumeric>
# Found in: AWS Console > Cognito > User Pools > Your Pool > General Settings
VITE_USER_POOL_ID=your_user_pool_id_here

# Cognito User Pool Client ID - identifies your app to Cognito
# Found in: AWS Console > Cognito > User Pools > Your Pool > App Clients
VITE_USER_POOL_CLIENT_ID=your_app_client_id_here

# Cognito Identity Pool ID - provides AWS credentials to users
# Format: <region>:<uuid>
# Found in: AWS Console > Cognito > Identity Pools > Your Pool > Edit
VITE_IDENTITY_POOL_ID=your_identity_pool_id_here

# --------------------------------------------
# AWS S3 Storage Configuration
# --------------------------------------------
# S3 bucket name where road survey data is stored
# Must match the bucket configured in amplify/backend.ts
VITE_S3_BUCKET_NAME=your-bucket-name-here

# AWS region where the S3 bucket is located
# Should match VITE_AWS_REGION for optimal performance
VITE_S3_BUCKET_REGION=eu-north-1

# Prefix path within the S3 bucket where data files are stored
# Default: "data/" - must end with forward slash
VITE_S3_DATA_PREFIX=data/

# --------------------------------------------
# Development Settings
# --------------------------------------------
# Skip authentication for local development
# WARNING: Set to false in production!
# Options: true | false
VITE_SKIP_AUTH=false

# Application logging level
# Options: debug | info | warn | error
VITE_LOG_LEVEL=info

# --------------------------------------------
# Monitoring & Analytics (Optional)
# --------------------------------------------
# Sentry DSN for error tracking
# Leave empty to disable Sentry integration
# Format: https://<key>@<organization>.ingest.sentry.io/<project>
VITE_SENTRY_DSN=

# Enable/disable monitoring features
# Options: true | false
VITE_ENABLE_MONITORING=false

# --------------------------------------------
# API Configuration (Future Use)
# --------------------------------------------
# Backend API endpoint (when implemented)
# Leave empty if not using external API
VITE_API_ENDPOINT=